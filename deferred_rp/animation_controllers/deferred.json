{
	"format_version": "1.18.10",
	"animation_controllers": {
		"controller.animation.deferred.point_light": {
			"states": {
				"default": {
					"transitions": [
						{"particles": "!q.actor_property('deferred:fog') && v.emitted != 1"},
						{"particles_fog": "q.actor_property('deferred:fog') && v.emitted != 2"}
					]
				},
				"particles": {
					"on_entry": ["v.emitted = 1;"],
					"on_exit": ["v.emitted = 0;"],
					"transitions": [
						{"default": "q.actor_property('deferred:fog')"}
					],
					"particle_effects": [
						{"effect": "light_volume"}
					]
				},
				"particles_fog": {
					"on_entry": ["v.emitted = 2;"],
					"on_exit": ["v.emitted = 0;"],
					"transitions": [
						{"default": "!q.actor_property('deferred:fog')"}
					],
					"particle_effects": [
						{"effect": "light_volume_fog"}
					]
				}
			}
		},
		
		"controller.animation.deferred.sky_fix": {
			"states": {
				"default": {
					"particle_effects": [
						{"effect": "sky_fix"}
					],
					"transitions": [{ "dummy": "1" }]
				},
				"dummy": {
					"transitions": [{ "default": "1" }]
				}
			}
		}
	}
}